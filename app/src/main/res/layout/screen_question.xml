<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlScreenQuestion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="invisible"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="35sp" />

    <LinearLayout
        android:id="@+id/llJokerArea"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/tvTimer"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llJokerHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivJokerHalf"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cast_expanded_controller_ad_label_background_color"></ImageView>

            <TextView
                android:id="@+id/tvJokerHalf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llJokerDouble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivJokerDouble"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cast_expanded_controller_ad_label_background_color"></ImageView>

            <TextView
                android:id="@+id/tvJokerDouble"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textSize="48sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llJokerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivJokerTime"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@color/cast_expanded_controller_ad_label_background_color"></ImageView>

            <TextView
                android:id="@+id/tvJokerTime"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="5"
                android:textSize="48sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/llJokerArea"
        android:gravity="center"
        android:text="TEST" />

    <TextView
        android:id="@+id/tvAnswerA"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvQuestion"
        android:gravity="center_vertical"
        android:onClick="test"
        android:text="A)TEXT" />

    <TextView
        android:id="@+id/tvAnswerB"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvQuestion"
        android:layout_toEndOf="@id/tvAnswerA"
        android:gravity="center_vertical"
        android:text="A)TEXT" />


    <TextView
        android:id="@+id/tvAnswerC"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvAnswerA"
        android:gravity="center_vertical"
        android:text="A)TEXT" />

    <TextView
        android:id="@+id/tvAnswerD"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvAnswerB"
        android:layout_toEndOf="@id/tvAnswerC"
        android:gravity="center_vertical"
        android:text="A)TEXT" />
</RelativeLayout>